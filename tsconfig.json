{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "ES2015",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "src/stories",
    "*.stories.tsx"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}